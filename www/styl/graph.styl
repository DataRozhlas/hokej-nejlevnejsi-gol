.graph
    width 100%
    float left
    form
      float right
      margin-right 25px
      margin-bottom 20px
      ul
        list-style-type none
        margin 0px
        padding 0px
        li
          padding 0px
          text-align right
          position relative
          input
            position absolute
            right -23px
            top 1px
    .lines
      position relative
      float left
      width 100%
      z-index 1
    .line
      height 30px
      position absolute
      left 0px
      width 100%
      transition top 0.4s
      .bar
        height 23px
        position absolute
        top 3px
        min-width 1px
        right 0px
        border-top-left-radius 2px
        border-bottom-left-radius 2px
        background ColorRed
        transition width 0.4s
      .title
        position absolute
        top 6px
        padding-right 8px
        transition right 0.4s
      .value
        position absolute
        top 6px
        padding-left 8px
        color #FFF
        font-weight bold
        transition left 0.4s

