.casove-rozlozeni
  width 100%
  .kluby
    margin-top 4px
    h3
      float left
      font-size 14px
      margin 0px
    ul
      float right
      width calc(100% - 100px)
      list-style-type none
      margin 0px
      padding 0px
      li
        float left
        margin-right 5px
        margin-bottom 5px
        a
          border-radius 3px
          border 1px solid #a
          display block
          padding 0px 7px
          color black
          text-decoration none
          &:hover
            cursor pointer
            box-shadow 0px 0px 3px ColorBlue
            background lighten(ColorBlue, 95%)
          &:active
            background lighten(ColorBlue, 90%)
        &.active a
            background lighten(ColorBlue, 20%)
            border-color ColorBlue
            color #FFF

  .left
    text-align right
    float left
  .right
    text-align left
    float right
  .left
  .right
    width 47%
  .lines
    width 100%
    float left
    .line
      width 100%
      float left
      .left
      .right
        height 30px
        div
          width (100% / 40)
          height 29px
      .left div
        float right
        border-left 1px solid
        background lighten(desaturate(ColorBlue, 80%), 70%)
        border-color lighten(desaturate(ColorBlue, 80%), 90%)
        &.full
          background ColorBlue
          border-color lighten(desaturate(ColorBlue, 80%), 50%)
      .right div
        float left
        border-left 1px solid
        background lighten(desaturate(ColorRed, 80%), 70%)
        border-color lighten(desaturate(ColorRed, 80%), 90%)
        &.full
          background ColorRed
          border-color lighten(desaturate(ColorRed, 80%), 50%)

      .marker
        float left
        width 6%
        padding-top 6px
        text-align center
        font-size 11px
        text-transform uppercase


