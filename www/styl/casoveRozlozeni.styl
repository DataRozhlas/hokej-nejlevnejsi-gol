.casove-rozlozeni
  width 100%
  .kluby
    margin-top 4px
    h3
      float left
      font-size 14px
      margin 0px
    ul
      float right
      width calc(100% - 100px)
      list-style-type none
      margin 0px
      padding 0px
      li
        float left
        margin-right 5px
        margin-bottom 5px
        a
          border-radius 3px
          border 1px solid #a
          display block
          padding 0px 7px
          color black
          text-decoration none
          &:hover
            cursor pointer
            box-shadow 0px 0px 3px ColorBlue
            background lighten(ColorBlue, 95%)
          &:active
            background lighten(ColorBlue, 90%)
        &.active a
            background lighten(ColorBlue, 20%)
            border-color ColorBlue
            color #FFF
  .legend
    width 100%
    float left
    clear both
    padding-left 100px
    span:first-of-type
      color ColorBlue
      border-bottom 3px solid ColorBlue
    span:last-of-type
      color ColorRed
      border-bottom 3px solid ColorRed

  .left
    text-align right
    float left
  .right
    text-align left
    float right
  .left
  .right
    width 46%
  .lines
    width 100%
    float left
    .line
      width 100%
      float left
      .left
      .right
        position relative
        height 30px
        div
          width (100% / 40)
          height 29px
          opacity 1
          transition opacity 0.8s, background 0.8s, border 0.8s
          &.entering
          &.exiting
            opacity 0
      .left div
        float right
        border-left 1px solid
        background ColorBlue
        border-color lighten(desaturate(ColorBlue, 80%), 50%)
      .right div
        float left
        border-left 1px solid
        background ColorRed
        border-color lighten(desaturate(ColorRed, 80%), 50%)
      .marker
        float left
        width 8%
        text-align center
        font-size 11px
        text-transform uppercase
        line-height 14px
        position relative
        top -6px
        span
          display none
          position relative
          top -2px
      .counts
        position absolute
        top 7px
        font-size 11px
      .left .counts
        padding-right 10px
      .right .counts
        padding-left 10px
      &:nth-child(13) .marker
        top -15px
        line-height 21px
        height 20px
      &:last-child .marker
          position relative
          top 7px
      &:nth-child(13)
        margin-top 2px
      &:nth-child(14)
        margin-top 2px
